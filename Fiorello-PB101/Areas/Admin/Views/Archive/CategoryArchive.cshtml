@model Paginate<CategoryArchiveVM>

@{
    ViewData["Title"] = "Category Archive";
}

<div class="container mt-5">
    <h2 class="text-center">Archive Categories</h2>
    <div class="table-responsive">
        <table class="table table-striped" id="categories-table">
            <thead>
                <tr>
                    <th>Category</th>
                    <th>Created date</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Datas)
                {
                    <tr class="category-data">
                        <td class="py-1">@item.CategoryName</td>
                        <td>@item.CreatedDate</td>
                        <td>
                            <form class="d-inline" method="post" asp-area="Admin" asp-controller="Category" asp-action="Delete" asp-route-id="@item.Id">
                                <button type="submit" class="btn btn-danger text-white btn-sm"><i class="mdi mdi-delete"></i></button>
                            </form>
                            <button class="btn btn-secondary text-white btn-sm add-archive" data-id="@item.Id">Restore</button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="pagination-area d-flex justify-content-center mt-3">
        <nav aria-label="...">
            <ul class="pagination" id="pagination-container">
                <li class="page-item @(Model.HasPrevious ? "" : "disabled")">
                    <a class="page-link" href="javascript:void(0)" data-page="@(Model.CurrentPage - 1)" tabindex="-1">Previous</a>
                </li>
                @for (int i = 1; i <= Model.TotalPage; i++)
                {
                    <li class="page-item @(Model.CurrentPage == i ? "disabled" : "")">
                        <a class="page-link @(Model.CurrentPage == i ? "paginate-active" : "")" href="javascript:void(0)" data-page="@i">@i</a>
                    </li>
                }
                <li class="page-item @(Model.HasNext ? "" : "disabled")">
                    <a class="page-link" href="javascript:void(0)" data-page="@(Model.CurrentPage + 1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
</div>

@section js {
    <script src="~/js/categoryArchivePagination.js"></script>
    <script>
        $(document).on("click", "#pagination-container .page-link", function () {
            let page = $(this).data("page");
            loadCategoryArchivePage('/Admin/Archive/GetCategories', 'categories-table', page);
        });
    </script>
}
