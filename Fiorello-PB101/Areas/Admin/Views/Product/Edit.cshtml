@model Fiorello_PB101.ViewModels.Products.ProductEditVM
@{
    ViewData["Title"] = "Edit";
}

<div class="container mt-5">
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group">
            <label for="exampleInputUsername1">Name</label>
            <input asp-for="Name" class="form-control" id="exampleInputUsername1">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Description</label>
            <input asp-for="Description" class="form-control" id="exampleInputUsername1">
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Price</label>
            <input asp-for="Price" class="form-control" id="exampleInputUsername1">
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Category</label>
            <select asp-for="CategoryId" asp-items="@ViewBag.categories" class="form-control"></select>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">Existing Images</label>
            <div>
                @foreach (var image in Model.ExistingImages)
                {
                    <div>
                        <img src="~/img/@image.Name" alt="@image.Name" width="100" />
                        <label>
                            <input type="checkbox" name="ImagesToDelete" value="@image.Id" />
                            Delete
                        </label>
                        <label>
                            <input type="radio" name="MainImageId" value="@image.Id" @(image.IsMain ? "checked" : "") />
                            Set as main
                        </label>
                    </div>
                }
            </div>
        </div>
        <div class="form-group">
            <label for="exampleInputUsername1">New Images</label>
            <input type="file" class="form-control" asp-for="NewImages" id="exampleInputUsername1" multiple>
            <span asp-validation-for="NewImages" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <a class="btn btn-light" asp-action="Index">Cancel</a>
    </form>
</div>
